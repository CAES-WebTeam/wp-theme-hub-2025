    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--georgia)",
            "fontSize": "var(--wp--preset--font-size--regular)",
            "lineHeight": "1.65"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--georgia)",
                    "fontSize": "var(--wp--preset--font-size--gigantic)",
                    "fontStyle": "normal",
                    "fontWeight": "400"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--oswald)",
                    "fontSize": "var(--wp--preset--font-size--huge)",
                    "fontStyle": "normal",
                    "fontWeight": "300"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--oswald)",
                    "fontSize": "1.6rem",
                    "fontStyle": "normal",
                    "fontWeight": "300"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--oswald)",
                    "fontSize": "1.4rem",
                    "fontStyle": "italic",
                    "fontWeight": "300"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--oswald)",
                    "fontSize": "1.25rem",
                    "fontStyle": "italic",
                    "fontWeight": "300"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--oswald)",
                    "fontSize": "1.1rem",
                    "fontStyle": "italic",
                    "fontWeight": "300"
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--georgia)",
                    "fontStyle": "normal",
                    "fontWeight": "400",
                    "lineHeight": "1.3"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--bulldog-red)"
                }
            }
        },
        "blocks": {
            "core/button": {
				"border": {
					"radius": "20rem"
				},
				"color": {
					"background": "#ffffff00",
					"text": "var(--wp--preset--color--contrast)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						}
					}
				},
				"spacing": {
					"padding": {
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)",
						"top": "var(--wp--preset--spacing--30)"
					}
				},
				"typography": {
					"lineHeight": "1"
				}
			},
            "core/image": {
				"elements": {
					"caption": {
						"color": {
							"background": "var(--wp--preset--color--base-two)",
							"text": "var(--wp--preset--color--contrast)"
						},
						"spacing": {
							"margin": {
								"top": "0px"
							},
							"padding": {
								"bottom": "var(--wp--preset--spacing--30)",
								"left": "var(--wp--preset--spacing--40)",
								"right": "var(--wp--preset--spacing--40)",
								"top": "var(--wp--preset--spacing--30)"
							}
						},
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
            "core/list-item": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/separator": {
                "border": {
                    "color": "var(--wp--preset--color--base-three)",
                    "width": "1px"
                }
            }
        }
    },
